{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true
	},
	"include": [
		"src/**/*", "static"
	],
	"exclude": [
		"node_modules"
	]
}
